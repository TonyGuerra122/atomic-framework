{
  "name": "@tonyguerradev/atomic-framework-cli",
  "version": "0.0.3",
  "description": "CLI for Atomic Framework",
  "main": "dist/index.js",
  "bin": {
    "atomic": "dist/init.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
